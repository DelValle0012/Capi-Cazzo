<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPrincipal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/pop_background">

    <TextView
        android:id="@+id/nomePopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="title"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fotoPopular"
        android:layout_width="63dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomePopular"
        app:srcCompat="@drawable/cat_1" />

    <TextView
        android:id="@+id/preco"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:text="0.0"
        android:textAlignment="center"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fotoPopular"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="@+id/fotoPopular"
        app:layout_constraintTop_toBottomOf="@+id/fotoPopular" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_marginEnd="3dp"
        android:text="R$"
        android:textAlignment="gravity"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/preco"
        app:layout_constraintEnd_toStartOf="@+id/preco"
        app:layout_constraintTop_toBottomOf="@+id/fotoPopular" />

    <TextView
        android:id="@+id/btn_Add"
        android:layout_width="74dp"
        android:layout_height="21dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:background="@color/button_color"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:paddingEnd="10dp"
        android:paddingBottom="3dp"
        android:text="+Adicionar"
        android:textAlignment="center"
        android:textColor="#263238"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fotoPopular"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/fotoPopular"
        app:layout_constraintTop_toBottomOf="@+id/preco" />
</androidx.constraintlayout.widget.ConstraintLayout>