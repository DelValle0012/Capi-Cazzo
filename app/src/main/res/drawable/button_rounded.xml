<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado quando o botão está pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700"/> <!-- Cor laranja escura -->
            <corners android:radius="16dp"/> <!-- Bordas arredondadas -->
        </shape>
    </item>

    <!-- Estado quando o botão está habilitado -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#2a2a2a"/> <!-- Cor de fundo branca -->
            <stroke
                android:width="3dp"
                android:color="#FFD700" />
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Estado padrão -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Cor azul padrão -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
